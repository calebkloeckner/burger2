<link rel="stylesheet" href="assets/css/style.css" type='text/css'>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
 crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Fontdiner+Swanky" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Germania+One" rel="stylesheet">
<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="title">
			<h1>Das Burger</h1>
		</div>

		<div class="col-xs-6 text center" class="task">
			<div class="row">
				{{#each burger_data}} {{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre id="burger_name">{{this.id}}.  {{this.burger_name}}</pre>
				</div>
				<div class="col-xs-3 text-center">
					<form method="POST" action="/burger/update?_method=PUT" class="button-size">
						<input type="hidden" name="burger_id" type="text" value="{{this.id}}">
						<br>
						<button type="submit" class="btn btn-default">
							Finish it!</button>
					</form>
				</div>
				{{/unless}} {{/each}}
			</div>
		</div>


		<div class="col-xs-6 text-center" class="task">
			{{#each burger_data}} {{#if this.devoured}}
			<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly> {{/if}} {{/each}}
		</div>
	</div>
</div>
<br>
<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burger/create" method="POST">
				<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
				<br>
				<button type="submit" class="btn btn-primary" id="text-enter-button">ADD</button>
			</form>
			<br>
			<br>
			<p id="fancy">What do you fancy?</p>
		</div>
	</div>
</div>